<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/one"
    tools:context="android.venky.com.fragments.OnBoardingPagerIndicator"
    android:textAlignment="center"
    android:layout_weight="0.9"
    android:gravity="center_vertical"
    android:paddingLeft="10sp"
    android:id="@+id/pageIndWin"
    android:orientation="horizontal">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@color/one"
        android:textColor="@android:color/white"
        android:id="@+id/skipTxt"
        android:text="@string/hello_pager_indicator"
        android:textAllCaps="true"
        android:gravity="center_vertical|left"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:id="@+id/pageviewindicatorcircles"

        android:background="@color/one"
        android:layout_gravity="center_horizontal"
        android:padding="15dp">


    </LinearLayout>

    <ViewSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/doneViewSwitcher"
        android:layout_marginRight="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextButton"

            android:src="@drawable/ic_navigate_next_white_48dp" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/one"
            android:textColor="@android:color/white"
            android:id="@+id/doneTxt"
            android:text="DONE"
            android:textAllCaps="true"
            android:gravity="center_vertical|left"
            android:paddingTop="17dp"
            android:textSize="20sp" />
    </ViewSwitcher>

</LinearLayout>