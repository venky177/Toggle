<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:gravity="center_horizontal"
        android:paddingBottom="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add a Device"
            android:id="@+id/yo"
            android:layout_marginTop="10dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Power Rating:"
            android:id="@+id/icon"
            android:textColor="@color/grey"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="44dp"
            app:met_baseColor="@color/primary"
            app:met_textColor="@color/grey"
            android:text="0.0.0.0"
            android:layout_marginLeft="7dp"
            android:id="@+id/volt1"
            android:layout_marginEnd="44dp"
            android:editable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Device state:"
            android:id="@+id/icon1"
            android:textColor="@color/grey"/>

        <!--Toggle-->
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="44dp"
            app:met_baseColor="@color/primary"
            app:met_textColor="@color/grey"
            android:text="0.0.0.0"
            android:layout_marginLeft="7dp"
            android:id="@+id/volt2"
            android:layout_marginEnd="44dp"
            android:editable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pin Number:"
            android:id="@+id/icon4"
            android:textColor="@color/grey"/>

        <!--Toggle-->
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="44dp"
            app:met_baseColor="@color/primary"
            app:met_textColor="@color/grey"
            android:text="0.0.0.0"
            android:layout_marginLeft="7dp"
            android:id="@+id/pin1"
            android:layout_marginEnd="44dp"
            android:editable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Room:"
            android:id="@+id/icon2"
            android:textColor="@color/grey"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="44dp"
            app:met_baseColor="@color/primary"
            app:met_textColor="@color/grey"
            android:text="Room"
            android:layout_marginLeft="7dp"
            android:id="@+id/room1"
            android:layout_marginEnd="44dp"
            android:editable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Device Start Time:"
            android:id="@+id/icon3"
            android:textColor="@color/grey"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="44dp"
            app:met_baseColor="@color/primary"
            app:met_textColor="@color/grey"
            android:text="Start time"
            android:layout_marginLeft="7dp"
            android:id="@+id/starttime1"
            android:layout_marginEnd="44dp"
            android:editable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>





</LinearLayout>